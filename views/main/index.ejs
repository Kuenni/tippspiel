<script src="//d3js.org/d3.v3.min.js" charset="utf-8"></script>
<body ng-app="mainPageApp">
	<div class="container-fluid" ng-controller="MainPageController">
			<%
				if(!Helper.isUserLoggedIn(req)){%>
					<%- partial("login.ejs") %>
			<%
				} else {	
			%>
		<div id="selectorsDiv" class="col-md-2 col-md-offset-5">
			<span id="seasonSelectDiv"> Saison:
				<select ng-model="selectedSeason" ng-change="seasonHasChanged()">
					<option value="" selected disabled>---Bitte  w&auml;hlen---</option>
					<option ng-repeat="season in seasons | orderBy:'seasonName'" value="{{season.id}}"> {{season.seasonName}} </option>
					<option value="-1"> Saison hinzuf&uuml;gen...</option>
				</select> </span>
			<span id="matchdaySelectDiv" ng-show="isSeasonSelected"> Spieltag:
				<select ng-options="day.name for day in matchdays" ng-model="selectedMatchday"
				ng-change="printSelectedMatchday()" >
					<option disabled value="">---Bitte  w&auml;hlen---</option>
				</select> </span>
		</div>
		<div class="col-md-10 col-md-offset-1 panel-group" id="accordion" role="tablist"
		aria-multiselectable="true" ng-show="isSeasonSelected">
			<div class="panel panel-default">
				<div class="panel-heading" role="tab" id="headingBets">
					<h4 class="panel-title"><a role="button"
					data-toggle="collapse"
					href="#collapseBets" aria-expanded="true"
					aria-controls="collapseBets"> Bets </a></h4>
				</div>
				<div id="collapseBets" class="panel-collapse collapse in"
				role="tabpanel" aria-labelledby="headingBets">
					<div class="panel-body" id="resultsTable">
						<div id="storeButtons" class="col-md-2 col-md-offset-10 text-right">
							<button class="btn btn-sm btn-success" ng-click="storeUpdates()" >
								Speichern
							</button>
						</div>
						<div id="resultsTable">
							<table class="table table-striped table-hover">
								<thead>
									<th>Index</th>
									<th>Heim</th>
									<th></th>
									<th>Gast</th>
									<th class="text-center col-xs-1">Tore Heim</th>
									<th></th>
									<th class="text-center col-xs-1">Tore Gast</th>
									<th></th>
									<th class="text-center col-sm-1">Ergebnis Heim</th>
									<th></th>
									<th class="text-center col-sm-1">Ergebnis Gast</th>
									<th></th>
									<th class="text-center col-xs-1">Punkte</th>
									<th></th>
									<th class="text-center col-sm-2">Anpfiff</th>
								</thead>
								<tr ng-repeat="bet in bets" data-ng-class="{success: bet.cachedPoints==5, 
								warning: bet.betHome == -1 || bet.betGuest == -1 || bet.betHome == undefined || bet.betGuest == undefined}">
									<td class="text-center">
										<!-- <img src={{bet.logoTeamHome}}> -->
										{{$index + 1}}
									</td>
									<td>{{bet.teamhome}}</td>
									<td></td>
									<td>{{bet.teamguest}}</td>
									<td>
										<input type="text" class="text-center form-control" ng-model="bet.betHome"/>
									</td>
									<td class="text-center">:</td>
									<td>
										<input type="text" class="text-center form-control" ng-model="bet.betGuest"/>
									</td>
									<td></td>
									<td class="text-center"> {{bet.match.cachedGoalsHome}} </td>
									<td class="text-center">:</td>
									<td class="text-center"> {{bet.match.cachedGoalsGuest}} </td>
									<td></td>
									<td class="text-center">{{bet.cachedPoints}}</td>
									<td></td>
									<td class="text-center">{{bet.match.matchDateTime | date: 'dd.MM.yy - HH:mm' : 'UTC'}} Uhr</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
			</div>
			<div class="panel panel-default" id="userRankingCollapsible">
				<div class="panel-heading" role="tab" id="headingOne">
					<h4 class="panel-title"><a role="button"
					data-toggle="collapse" 
					href="#collapseOne" aria-expanded="false"
					aria-controls="collapseOne"> User Ranking </a></h4>
				</div>
				<div id="collapseOne" class="panel-collapse collapse in"
				role="tabpanel" aria-labelledby="headingOne">
					<div class="panel-body" id="userRanking">
						<table class="table table-striped table-hover">
							<thead>
								<th>User</th>
								<th class="text-center">Correct</th>
								<th class="text-center">Difference</th>
								<th class="text-center">Tendency</th>
								<th class="text-center">Total Points</th>
							</thead>
							<tr ng-repeat="item in users | orderBy:'-points'">
								<td>{{item.username}}</td>
								<td class="text-center">{{item.nCorrect}}</td>
								<td class="text-center">{{item.nDiff}}</td>
								<td class="text-center">{{item.nTrend}}</td>
								<td class="text-center">{{item.points}}</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
			<div class="panel panel-default" id="teamRankingCollapsible">
				<div class="panel-heading" role="tab" id="headingTwo">
					<h4 class="panel-title"><a role="button"
					data-toggle="collapse"
					href="#collapseTwo" aria-expanded="false"
					aria-controls="collapseTwo"> Team Ranking </a></h4>
				</div>
				<div id="collapseTwo" class="panel-collapse collapse in"
				role="tabpanel" aria-labelledby="headingTwo">
					<div class="panel-body" id="teamRanking">
						<table class="table table-striped table-hover">
							<thead>
								<th class="name"><a ng-click="sort_by('name')">Team <i class="fa fa-sort"></i></a></th>
								<th class="text-center"><a ng-click="sort_by('wins')">Won <i class="fa fa-sort"></i></a></th>
								<th class="text-center"><a ng-click="sort_by('draws')">Draw <i class="fa fa-sort"></i></a></th>
								<th class="text-center"><a ng-click="sort_by('losses')">Lost <i class="fa fa-sort"></i></a></th>
								<th class="text-center"><a ng-click="sort_by('points')">Total Points <i class="fa fa-sort"></i></a></th>
							</thead>
							<tr ng-repeat="item in teams | orderBy:sortingOrder:reverse">
								<td>{{item.name}}</td>
								<td class="text-center">{{item.wins}}</td>
								<td class="text-center">{{item.draws}}</td>
								<td class="text-center">{{item.losses}}</td>
								<td class="text-center">{{item.points}}</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
			<div class="panel panel-default" id="timelineCollapsible">
				<div class="panel-heading" role="tab" id="headingFour">
					<h4 class="panel-title"><a role="button"
					data-toggle="collapse" 
					href="#collapseFour" aria-expanded="false"
					aria-controls="collapseFour"> Timeline </a></h4>
				</div>
				<div id="collapseFour" class="panel-collapse collapse in"
				role="tabpanel" aria-labelledby="headingFour">
					<div class="panel-body" id="userTimeline">
						<svg class="chart" id="timeline"></svg>
					</div>
				</div>
			</div>
		</div>
			<%
				}
			%>
	</div>
</body>
